from flask import Flask, jsonify
from Conexión.conexion import get_connection
app = Flask(__name__)
@app.route('/')
def home():
    return "¡Hola! Proyecto Flask con MySQL funcionando."
@app.route('/test_db')
def test_db():
    connection = get_connection()
    if connection:
        try:
            cursor = connection.cursor()
            cursor.execute("SELECT DATABASE();")
            db_name = cursor.fetchone()
            cursor.close()
            connection.close()
            return jsonify({"mensaje": "Conexión exitosa a la base de datos", "base_de_datos": db_name[0]})
        except Exception as e:
            return jsonify({"error": str(e)})
    else:
        return jsonify({"error": "No se pudo conectar a la base de datos"})
if __name__ == '__main__':
    app.run(debug=True)
