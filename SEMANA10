                <pre class="text-green-400 overflow-x-auto"><code>
# app.py - Aplicación principal Flask
from flask import Flask, render_template, jsonify

app = Flask(__name__)

@app.route('/')
def index():
    return render_template('index.html', 
                         title='Inicio',
                         welcome_message='Bienvenido a mi proyecto Flask')

@app.route('/about')
def about():
    return render_template('about.html',
                         title='Acerca de',
                         description='Proyecto desarrollado por estudiante de sistemas')

@app.route('/api/projects')
def api_projects():
    projects = [
        {'id': 1, 'name': 'Sistema de Gestión', 'tech': ['Flask', 'SQLite']},
        {'id': 2, 'name': 'API RESTful', 'tech': ['Flask-RESTful', 'JWT']},
        {'id': 3, 'name': 'Blog Personal', 'tech': ['MySQL', 'WTForms']}
    ]
    return jsonify(projects)

if __name__ == '__main__':
    app.run(debug=True, host='0.0.0.0', port=5000)
                </code></pre>
            </div>

